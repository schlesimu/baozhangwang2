.flex-column {
  display: flex;
  flex-direction: column;
}
.content {
  text-align: center;
}
.minorContent {
  width: 650rpx;
  padding: 0 50rpx;
}
.process {
  margin-top: 200rpx;
  margin-left: 30%;
}
.logo {
  height: 200rpx;
  width: 200rpx;
  margin-top: 100rpx;
}
.title {
  font-size: 36rpx;
  color: #373737;
  font-weight: bold;
}
.infoTitle {
  font-size: 32rpx;
  color: #373737;
  padding-left: 15rpx;
  font-weight: bold;
}
.tip {
  font-size: 28rpx;
  color: #7e7e83;
  vertical-align: text-top;
}
.bottom_aera {
  position: fixed;
  bottom: 0;
}
.line {
  width: 686rpx;
  height: 3rpx;
  background-color: #EEEEEE;
  margin: 20rpx auto 0;
}
.infoPic {
  height: 50rpx;
  width: 50rpx;
}
.infoContentTitle {
  display: flex;
  align-items: center;
  padding: 40rpx 40rpx;
}
.infoContent {
  display: flex;
  align-items: center;
}
.updateInfo {
  font-size: 28rpx;
  color: #7e7e83;
  padding: 0 80rpx;
  line-height: 50rpx;
}
.smallTitle {
  font-size: 26rpx;
  font-weight: 500;
  padding: 20rpx 0;
  line-height: 1.5;
  color: #888;
}
