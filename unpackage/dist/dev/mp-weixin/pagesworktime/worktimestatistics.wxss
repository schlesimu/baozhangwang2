view {
  font-size: 24rpx;
}
.up_margin {
  margin: auto;
  padding-bottom: 200rpx;
  width: 686rpx;
  position: relative;
  background-color: #fff;
  z-index: 3;
  border-radius: 16rpx;
}
.up_margin .worktime-tab {
  text-align: center;
  border-bottom: 1px dotted #efefef;
}
.up_margin .worktime-tab .worktime-tab-item {
  width: 100%;
  height: 72rpx;
}
.up_margin .worktime-tab .current-tab {
  border-bottom: 3px solid #50aeff;
  color: #50aeff;
  padding-bottom: 10rpx;
}
.up_margin .worktime-tab .current-tab .current-tab-font {
  font-weight: 700;
}
@-webkit-keyframes mymove {
0% {
    right: 10px;
}
50% {
    right: 0px;
}
100% {
    right: 10px;
}
}
@keyframes mymove {
0% {
    right: 10px;
}
50% {
    right: 0px;
}
100% {
    right: 10px;
}
}
.animate {
  -webkit-animation: mymove 1.5s infinite;
          animation: mymove 1.5s infinite;
}
.uni-calendar__header_hide {
  display: none !important;
}
.uni-calendar-item__weeks-box-item .uni-calendar-item__weeks-lunar-text {
  font-size: 20rpx !important;
}
.uni-calendar__weeks-item .uni-calendar-item--isDay, .uni-calendar__weeks-item .uni-calendar-item--checked {
  opacity: 1 !important;
}

