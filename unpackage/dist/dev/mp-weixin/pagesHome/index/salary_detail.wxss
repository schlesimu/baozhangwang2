page {
  background: #fff;
}
.banner {
  width: 686rpx;
  height: 386rpx;
  position: relative;
  margin: auto;
}
.banner_img {
  width: 100%;
  display: block;
  background-color: #F7F7F7;
  height: 100%;
}
.banner_img image {
  width: 100%;
  height: 100%;
}
.downImg {
  width: 30rpx;
  height: 24rpx;
}
.inputBox {
  width: 686rpx;
  height: 72rpx;
  border-radius: 34rpx;
  box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.04);
  margin: auto;
}
.shadow {
  box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.04);
}
.video_image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 10;
}
.cuIcon-playfill {
  z-index: 100;
}
.bg_img {
  width: 106rpx;
  height: 106rpx;
  margin-right: 20rpx;
  background-color: #eeeeee;
}
.bg_img image {
  width: 100%;
  height: 100%;
}
.returnBox {
  min-width: 97rpx;
  height: 87rpx;
  background: white;
  border: 1px solid #cccccc;
  opacity: 1;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.returnBox .top_blue {
  height: 50%;
  background-color: #50aeff;
  margin-top: -3rpx;
  color: #ffffff;
  width: 100%;
}
.box_sort {
  width: 97rpx;
  height: 90rpx;
  border: 1px solid #cccccc;
  text-align: center;
  line-height: 45rpx;
}
.box_sort view {
  font-size: 12px;
}
.titItem:nth-child(4) {
  margin-right: 0;
}
.save {
  position: absolute;
  right: 0rpx;
  bottom: -24rpx;
  width: 170rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 28rpx;
}
.shop_img {
  width: 106rpx;
  height: 106rpx;
  background-color: #f7f7f7;
  margin-right: 18rpx;
}
.shop_img image {
  width: 100%;
  height: 100%;
}
.theme_tag {
  width: 120rpx;
  height: 64rpx;
  border: 1px solid #1b90ff;
  color: #1b90ff;
  border-radius: 32rpx;
  font-size: 28rpx;
}
button {
  border-radius: 0;
}
button:after {
  border: none;
}

