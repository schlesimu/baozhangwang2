page,
page {
  background: #fff !important;
}
.title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.2;
  letter-spacing: 1;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
}
.share {
  width: 38rpx;
  height: 38rpx;
}
.share image {
  width: 100%;
  height: 100%;
}
.box_h5 {
  position: fixed;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 12%;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 60rpx;
  text-align: center;
}
.replyTxt {
  background-color: rgba(80, 174, 255, 0.1);
  color: rgba(80, 174, 255, 0.9);
  padding: 6rpx 12rpx;
  border-radius: 30rpx;
}
.topBar {
  position: fixed;
  top: 0;
  z-index: 100;
  width: 100%;
}
.icon_x {
  position: absolute;
  right: 40rpx;
  top: 2rpx;
}
.pictype image {
  width: 88rpx;
  height: 88rpx;
}
.video_image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 10;
}
.play_tag {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  right: 0;
  margin: auto;
  z-index: 100;
}
.play_tag image {
  width: 100%;
  height: 100%;
}

