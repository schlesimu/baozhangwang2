.cu-bar .action {
  position: relative;
  z-index: 5;
}
.warp {
  background: #fff;
  min-height: 100vh;
}
.warp .login_tit {
  margin-top: 28rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}
.warp .bg_img {
  width: 100%;
  height: 441rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}
.warp .login-title {
  position: relative;
  z-index: 9;
}
.warp .login-title .logo {
  padding-top: 128rpx;
  padding-left: 75rpx;
  font-size: 56rpx;
  font-weight: 500;
}
.warp .form-wapper,
.warp .logo {
  width: 100%;
  box-sizing: border-box;
}
.warp .form-wapper {
  position: relative;
  padding: 30rpx 30rpx 80rpx;
  border-radius: 10rpx;
  z-index: 99;
}
.warp .form-wapper .password,
.warp .form-wapper .code {
  width: calc(100%);
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 60rpx 0rpx;
}
.warp .form-wapper .password .get-code,
.warp .form-wapper .code .get-code {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
  z-index: 3;
}
.warp .form-wapper .password .get-code:after,
.warp .form-wapper .code .get-code:after {
  content: " ";
  width: 1rpx;
  height: 50rpx;
  background-color: #fff;
  position: absolute;
  z-index: 3;
  margin-right: 100%;
  left: 0;
  top: 20rpx;
}
.warp .form-wapper .password input,
.warp .form-wapper .code input {
  width: 70%;
  height: 50rpx;
  font-weight: 200;
}
.warp .form-wapper .btn {
  color: #1B90FF;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  font-size: 40rpx;
}
.warp .login-btn {
  display: block;
  line-height: 88rpx;
  text-align: center;
  margin: 0 30rpx;
  height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background: #1B90FF;
  border-radius: 50rpx;
  background-blend-mode: normal, normal;
}
.warp .login-btn:after {
  border: 0;
}
.warp .quick {
  text-align: center;
}
.warp .quick .quick-title {
  margin: 120rpx 0 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.warp .quick .quick-title .txt {
  font-size: 28rpx;
  color: #999;
  padding: 0 20rpx;
}
.warp .quick .quick-title .line {
  display: block;
  width: 160rpx;
  position: relative;
}
.warp .quick .quick-title .line:after {
  content: "";
  position: absolute;
  z-index: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #eee;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
}
.warp .quick image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 35rpx;
}

