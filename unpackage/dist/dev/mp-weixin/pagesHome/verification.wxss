.icon {
  font-style: normal;
}
page {
  background: #FFFFFF;
  height: 100%;
}
.form .username {
  position: relative;
}
.form .res {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.form {
  width: 100%;
  font-size: 30rpx;
}
.form .res {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}
.form .username,
.form .password,
.form .code {
  width: calc(100%);
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 26rpx;
}
.form .username .get-code,
.form .password .get-code,
.form .code .get-code {
  position: absolute;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 0;
  padding: 0 40rpx;
  z-index: 3;
}
.form .username .get-code:after,
.form .password .get-code:after,
.form .code .get-code:after {
  content: " ";
  width: 1rpx;
  height: 50rpx;
  background-color: #fff;
  position: absolute;
  z-index: 3;
  margin-right: 100%;
  left: 0;
  top: 20rpx;
}
.form .username input,
.form .password input,
.form .code input {
  width: 70%;
  height: 50rpx;
  font-weight: 200;
}
.form .btn {
  color: #EC5413;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  font-size: 40rpx;
}
.oauth {
  position: absolute;
  bottom: 50rpx;
  width: 100%;
}
.oauth .text {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.oauth .list {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.oauth .list .icon {
  font-size: 80rpx;
  margin: 0 30rpx;
}

