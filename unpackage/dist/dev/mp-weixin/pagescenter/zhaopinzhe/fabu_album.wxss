page {
  background-color: #fff;
  height: 100%;
  letter-spacing: 1px;
}
.areabox {
  width: 686rpx;
  height: 80rpx;
  border: 1px solid #cccccc;
  padding: 20rpx;
  position: relative;
}
.areabox .txtnum {
  position: absolute;
  font-size: 24rpx;
  bottom: 8rpx;
  right: 20rpx;
}
uni-textarea {
  width: 560rpx;
  height: 150rpx;
}
.biaoqian {
  padding: 8rpx 10rpx;
  background-color: #50aeff;
  border-radius: 10rpx;
  font-size: 22rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  position: relative;
  text-align: center;
}
.biaoqian image {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  right: -19rpx;
  top: -19rpx;
}
.solids image {
  width: 140rpx;
  height: 140rpx;
}
.solids::after {
  border: 0;
}
.bom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.btn {
  text-align: center;
  color: #50aeff;
  border-radius: 4px;
  font-size: 17px;
  border: 1px solid #50aeff;
  background-color: #fff;
}
.cu-form-group {
  padding: 0;
}
.cu-form-group .bg-img {
  width: 300rpx;
  height: 200rpx;
  position: relative;
}
.cu-form-group .bg-img .play {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.3);
}
.cu-form-group .bg-img .play image {
  max-width: 80rpx;
  max-height: 80rpx;
}
.cu-form-group .bg-img > image {
  width: 100%;
  height: 100%;
}
.cu-list.menu.sm-border > .cu-item:after {
  left: 0;
}
.cu-list.menu > .cu-item.arrow {
  padding: 0;
  min-height: 140rpx;
}
.cu-list.menu > .cu-item.arrow:before {
  top: 58rpx;
  opacity: 0.6;
}
.cu-list.menu > .cu-item.arrow:nth-child(10):before,
.cu-list.menu > .cu-item.arrow:nth-child(8):before,
.cu-list.menu > .cu-item.arrow:nth-child(7):before {
  opacity: 0;
}

