page {
  height: calc(100%);
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
}
page .change .warp {
  background: #fff;
}
page .change .warp .feedback .feedback_top {
  display: flex;
  align-items: center;
}
page .change .warp .feedback .feedback_reason {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
page .change .warp .feedback .feedback_reason view {
  width: 29.33%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  background: #F6F7F9;
}
page .change .btn-primary {
  position: fixed;
  bottom: 90rpx;
  left: 0;
  right: 0;
  width: 686rpx;
  margin: auto;
  border-radius: 40rpx;
  padding: 15rpx 0;
  text-align: center;
  color: #FFFFFF;
}
page .change .feedback_content {
  padding: 40rpx 25rpx;
}
page .change .feedback_content .feedback_content_top {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 40rpx;
}
page .change .feedback_content .content {
  border: 1px solid #CCCCCC;
}
page .change .feedback_content .content textarea {
  width: 100%;
  font-size: 28rpx;
  height: 300rpx;
  padding: 20rpx 0;
}
page .change .feedback_content image {
  width: 164rpx;
  height: 164rpx;
  margin-bottom: 18rpx;
}
page .change .sub {
  margin-top: 30%;
  line-height: 88rpx;
  background-color: #0081ff;
  color: #fff;
  text-align: center;
  border-radius: 45px;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

