page {
  background-color: #fff;
  padding-top: 30rpx;
}
.txtColor {
  color: #999;
}
.cu-list.menu > .cu-item {
  min-height: 150rpx;
}
.solids image {
  width: 158rpx;
  height: 158rpx;
}
.solids::after {
  border: 0;
}
.cu-form-group {
  padding: 0;
}
.cu-form-group .bg-img {
  width: 300rpx;
  height: 200rpx;
  position: relative;
}
.cu-form-group .bg-img .play {
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.3);
}
.cu-form-group .bg-img .play image {
  max-width: 80rpx;
  max-height: 80rpx;
}
.cu-form-group .bg-img > image {
  width: 100%;
  height: 100%;
}
.areabox {
  width: 686rpx;
  height: 160rpx;
  border: 1px solid #cccccc;
  padding: 20rpx;
  position: relative;
}
.areabox .txtnum {
  position: absolute;
  font-size: 24rpx;
  bottom: 8rpx;
  right: 20rpx;
}
.cu-tag {
  position: absolute;
  right: 0;
  top: 0;
  border-bottom-left-radius: 3px;
  padding: 3px 6px;
  height: auto;
  background-color: rgba(0, 0, 0, 0.5);
}
.content > text:nth-child(1) {
  width: 23%;
}
.cu-form-group {
  padding: 0;
}
.grid.grid-square > uni-view > uni-text[class*='cuIcon-'] {
  background-color: #fafafa;
  border: none;
}
uni-textarea {
  width: 100%;
  height: 350rpx;
}
.active {
  background-color: #F27B04 !important;
  color: #fff !important;
}
.cu-list.menu > .cu-item.arrow:nth-child(2n):before,
.cu-list.menu > .cu-item.arrow:nth-child(1):before {
  content: '';
}
.cu-list.menu > .cu-item.arrow:nth-child(1) {
  padding-right: 28rpx;
}
.cu-list.menu > .cu-item.arrow:before {
  top: 58rpx;
  opacity: 0.6;
}

