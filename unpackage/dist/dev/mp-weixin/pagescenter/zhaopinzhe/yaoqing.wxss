.my_invite_child {
  text-align: center;
  line-height: 110rpx;
  font-size: 30rpx;
}
.my_invite_child > text:nth-of-type(2) {
  margin-left: 30rpx;
  color: #50aeff;
}
.ewm_down {
  height: 80rpx;
  width: 418rpx;
  line-height: 80rpx;
  border-radius: 40px;
  text-align: center;
  background: #50aeff;
  color: #fff;
  margin: 0 auto;
}
.ewm_share {
  height: 80rpx;
  width: 418rpx;
  line-height: 80rpx;
  border-radius: 40px;
  text-align: center;
  border: 2rpx solid #50aeff;
  margin: 80rpx auto 30rpx;
  color: #50aeff;
}
.numberCode {
  /* background: #fff; */
  margin: 0 25rpx;
}
.numberCode > text {
  color: #999;
  margin-top: 20rpx;
  line-height: 80rpx;
}
.code_box {
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  flex-shrink: 0;
  border-radius: 10rpx;
  overflow: hidden;
}
.code_box > view {
  flex-shrink: 0;
  width: 20%;
  text-align: center;
  background: #ec5413;
  color: #fff !important;
}
.code_box > input {
  flex-shrink: 0;
  width: 80%;
  height: 100%;
  padding-left: 30rpx;
}
.share_icon {
  width: 88rpx;
  height: 88rpx;
}
.cu-list.grid > .cu-item:after {
  content: '';
  width: 0;
  height: 0;
}

