page {
  width: 100%;
  height: 100%;
}
.bg-f9 {
  background-color: #f9f9f9;
}
.nav {
  margin-bottom: 20rpx;
}
.nav .cu-item.cur {
  position: relative;
  border-bottom: 0;
}
.nav .cu-item.cur::after {
  content: '';
  display: inline-block;
  width: 80rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #f37b1d;
  position: absolute;
  bottom: 2px;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
#list {
  /* background: #fff; */
}
.list {
  /* // width: 98%;
	// margin-left: 2%; */
  background: #fff;
  height: 150rpx;
  padding: 0rpx 25rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.title:nth-of-type(1) {
  color: #333;
  font-size: 28rpx;
}
.title:nth-of-type(2) {
  font-size: 28rpx;
  line-height: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  position: absolute;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.content {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999 !important;
}
.qrimg {
  text-align: center;
  width: 100%;
  height: 418rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.qrimg image {
  width: 100%;
  height: 100%;
}
.my_invite {
  margin: 0 auto;
  width: 418rpx;
}
.my_invite_box {
  padding-top: 1rpx;
}
