.min-countdown {
  font-size: 12px;
  color: #f00;
}
.nav .cu-item {
  height: 80rpx;
  line-height: 80rpx;
}
.job_img {
  width: 106rpx;
  height: 106rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.job_img image {
  width: 100%;
  height: 100%;
}
.mt200 {
  margin-top: 200rpx !important;
}
.mt100 {
  margin-top: 100rpx !important;
}
.buyer-box {
  height: 100rpx;
}
.buyer-box .head-img {
  width: 64rpx;
  height: 64rpx;
  display: block;
  border-radius: 50%;
}
.nav-tag {
  position: relative;
}
.btn_blue {
  width: 150rpx;
  height: 52rpx;
  border: 1px solid #1B90FF;
  color: #1B90FF;
  line-height: 52rpx;
  text-align: center;
  border-radius: 100rpx;
}
.select {
  color: #1B90FF;
  padding: 0 20rpx 0rpx;
  position: relative;
}
.select::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 54rpx;
  height: 6rpx;
  z-index: 9999;
  background-color: #1B90FF;
}
.tag {
  position: absolute;
  top: 12rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 32rpx 32rpx 32rpx 0;
  background: #F64948;
  font-size: 12px;
  color: #FFFFFF;
}
.list-item {
  padding: 20rpx;
  background: #FFFFFF;
  margin-top: 20rpx;
}
.list-item .handle-box {
  border-top: 1px solid #EEEEEE;
  height: 100rpx;
}
.goods-img {
  width: 200rpx;
  height: 200rpx;
}
.goods-info {
  height: 200rpx;
}

