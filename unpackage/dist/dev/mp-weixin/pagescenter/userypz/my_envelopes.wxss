page {
  background-color: #fff;
}
.adress {
  color: #999999;
  position: relative;
  font-size: 12px;
}
.adress image {
  width: 30rpx;
  height: 26rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.job_img {
  width: 106rpx;
  height: 106rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.job_img image {
  width: 100%;
  height: 100%;
}
.select {
  color: #1B90FF;
  padding: 0 20rpx 0rpx;
  position: relative;
}
.select::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 54rpx;
  height: 6rpx;
  z-index: 9999;
  background-color: #1B90FF;
}
.nav .cu-item.cur {
  border: 0;
  position: relative;
}
.nav .cu-item.cur::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 4rpx;
  background-color: #338fff;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 0;
}

