page {
  height: 100vh;
  background: linear-gradient(180deg, #FF9844 0%, #FF6B4B 100%);
}
.contant {
  height: 100vh;
  width: 100%;
  background-image: url("https://app.chongdarenli.com/static/miniwechat/new/share_bg.png");
  background-size: 100% 100%;
}
.contant1 {
  position: fixed;
  z-index: 0;
  height: 100vh;
  width: 100%;
}
.top_item {
  width: 100%;
  height: 307rpx;
  position: relative;
  z-index: 100;
}
.top_item image {
  width: 100%;
  height: 100%;
}
.top_item .txt_item {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
.center_item {
  width: 100%;
  height: 476rpx;
  position: relative;
}
.center_item image {
  width: 100%;
  height: 100%;
}
.center_item .txt_item {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
}
.center_item .txt_item .top_box {
  width: 457rpx;
  height: 53rpx;
  line-height: 53rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.center_item .txt_item .top_box image {
  width: 457rpx;
  height: 53rpx;
}
.center_item .txt_item .top_box .lastTime {
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.bom_item {
  width: 100%;
  height: 689rpx;
  position: relative;
}
.bom_item image {
  width: 100%;
  height: 100%;
}
.bom_item .top_box {
  position: absolute;
  top: 46rpx;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 10;
}
.bom_item .list {
  width: 100%;
  height: 459rpx;
  padding: 40rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 60rpx;
  margin: auto;
  z-index: 10;
}
.btn_share {
  width: 612rpx;
  height: 88rpx;
  background: linear-gradient(180deg, #FF9844 0%, #FF6B4B 100%);
  border-radius: 8rpx;
  text-align: center;
  line-height: 88rpx;
  color: #FFFFFF;
}
.bg-press {
  background: linear-gradient(270deg, #FC7F01 0%, #F95204 100%);
}
.bg_img {
  width: 96rpx;
  height: 96rpx;
  margin-right: 20rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
}
.bg_img image {
  width: 100%;
  height: 100%;
}
.icon_x {
  position: absolute;
  right: 40rpx;
  top: 10rpx;
}
.popup_box {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9999;
}
.popup_box .bg_box {
  width: 626rpx;
  height: 762rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.popup_box .bg_box .bg-img {
  width: 626rpx;
  height: 662rpx;
  position: relative;
  background-image: url(https://app.chongdarenli.com/static/miniwechat/new/icon_bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  border-radius: 44rpx;
}
.popup_box .bg_box .bg-img image {
  position: relative;
}
.popup_box .bg_box .bg-img .top_box {
  position: relative;
  z-index: 9999;
}
.popup_box .bg_box .bg-img .bom_box {
  position: absolute;
  z-index: 9999;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.popup_box .bg_box .bg-img .bom_box .btn {
  width: 320rpx;
  height: 80rpx;
  margin: 15rpx 0;
  text-align: center;
  line-height: 80rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.progress {
  position: relative;
}
.progress .rote {
  position: absolute;
  top: -50rpx;
  background-color: #ff3235;
  color: #ffffff;
  padding: 2rpx 6rpx;
  border-radius: 20rpx;
  font-size: 10px;
}

