page {
  font-size: 28rpx;
  color: #333;
  background: #fff;
}
page .change .warp {
  width: 100%;
  background: #fff;
  border-bottom: 20rpx solid #fff;
}
page .change .warp .feedback {
  padding: 0 25rpx;
}
page .change .warp .feedback .feedback_top {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 40rpx;
  margin-top: 50rpx;
}
page .change .warp .feedback .feedback_reason {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}
page .change .warp .feedback .feedback_reason view {
  width: 29.33%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 0 2% 20rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  border: 1px solid #e6e6e6;
  color: #999;
}
page .change .warp .feedback .feedback_reason .active {
  color: #1B90FF;
  border: 1px solid #1B90FF;
  background-color: #ECF6FF;
}
page .change .warp .feedback_content {
  padding: 40rpx 25rpx;
}
page .change .warp .feedback_content .feedback_content_top {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 40rpx;
}
page .change .warp .feedback_content .content {
  border: 1px solid #CCCCCC;
}
page .change .warp .feedback_content .content textarea {
  width: 100%;
  font-size: 28rpx;
  height: 450rpx;
  padding: 20rpx 0;
}
page .change .warp .feedback_content image {
  width: 164rpx;
  height: 164rpx;
  margin-bottom: 18rpx;
}
page .change .feedback_contact {
  padding: 0 25rpx;
  background: #fff;
}
page .change .feedback_contact .feedback_contact_top {
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}
page .change .feedback_contact .feedback_contact_content input {
  height: 80rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  border-radius: 10rpx;
}
page .change .abc {
  width: 750rpx;
  height: 20rpx;
  background: #F7F7F7;
}
page .change .sub {
  margin-top: 30%;
  line-height: 88rpx;
  background-color: #0081ff;
  color: #fff;
  text-align: center;
  border-radius: 45px;
  margin-left: 25rpx;
  margin-right: 25rpx;
}
page .solids image {
  width: 140rpx;
  height: 140rpx;
}
page .solids::after {
  border: 0;
}

